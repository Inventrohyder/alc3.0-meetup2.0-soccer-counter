<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TEAM A"
            android:padding="16dp"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/goals_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:onClick="addGoals"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goals_text"
                android:layout_toRightOf="@id/goals_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/foals_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Foals"
                android:onClick="addFoals"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foals_text"
                android:layout_toRightOf="@id/foals_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yellows_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Yellow Cards"
                android:onClick="addYellows"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellows_text"
                android:layout_toRightOf="@id/yellows_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reds_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Red Cards"
                android:onClick="addReds"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reds_text"
                android:layout_toRightOf="@id/reds_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="4dp"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:background="@android:color/darker_gray">

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TEAM B"
            android:padding="16dp"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/goals_buttonb"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:onClick="addGoalsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goals_textb"
                android:layout_toRightOf="@id/goals_buttonb"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/foals_buttonb"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Foals"
                android:onClick="addFoalsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foals_textb"
                android:layout_toRightOf="@id/foals_buttonb"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yellows_buttonb"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Yellow Cards"
                android:onClick="addYellowsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellows_textb"
                android:layout_toRightOf="@id/yellows_buttonb"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reds_buttonb"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Red Cards"
                android:onClick="addRedsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reds_textb"
                android:layout_toRightOf="@id/reds_buttonb"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:onClick="reset"
            android:text="reset" />

    </LinearLayout>


</RelativeLayout>