                android:padding="8dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/yellow_cards"
                android:onClick="addYellowsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellows_textb"
                android:padding="8dp"
                android:text="@string/_0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redsb"
            android:layout_below="@id/yellowsb"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reds_buttonb"
                android:layout_width="110dp"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="@string/red_cards"
                android:onClick="addRedsb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reds_textb"
                android:padding="8dp"
                android:text="@string/_0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>