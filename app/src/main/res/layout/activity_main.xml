                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yellows_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Yellow Cards" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellows_text"
                android:layout_toRightOf="@id/yellows_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reds_button"
                android:layout_width="130dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="Red Cards" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reds_text"
                android:layout_toRightOf="@id/reds_button"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="4dp"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:background="@android:color/darker_gray">

</LinearLayout>

